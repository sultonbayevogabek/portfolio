<%
let {
    profileImg,
    jobs,
    about,
    email,
    phone,
    telegram,
    github,
    youtube,
    education,
    experience,
    skills,
    projects
} = data
%>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Admin Panel</title>
</head>
<body class="bg-light">
<div class="container pt-5">
    <div class="row mb-3">
        <div class="col-12">
            <h2>Rasm</h2>
            <input class="form-control" type="file" id="profileImg">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <h2>Kasblar</h2>
            <ul class="list-group mb-3">
                <% jobs.forEach(job => { %>
                    <li class="list-group-item d-flex align-items-center justify-content-between">
                        <span><%= job %></span>
                        <a class="btn btn-danger p-1" href="/admin/remove-job/<%= job %>">O'chirish</a>
                    </li>
                <% }) %>
            </ul>
            <form class="d-flex" action="/admin/add-job" method="post">
                <input class="form-control" name="job" type="text" placeholder="Kasb nomini kiriting" required minlength="3">
                <button class="btn btn-primary">+</button>
            </form>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <h2>Men haqimda bo'limi</h2>
            <form action="/admin/about-description" method="post">
                <input class="form-control" type="text" name="about_description" placeholder="Tavsiflovchi matn" required minlength="3">
            </form>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <h2>Email, Telefon, Telegram, Github, YouTube</h2>
            <form action="/admin/links" method="post">
                <label class="d-block w-100 mb-2">
                    <span class="mb-1">Email</span>
                    <input class="form-control" type="email" value="<%= email %>" name="email">
                </label>
                <label class="d-block w-100 mb-2">
                    <span class="mb-1">Telefon</span>
                    <input class="form-control" type="tel" value="<%= phone %>" name="phone">
                </label>
                <label class="d-block w-100 mb-2">
                    <span class="mb-1">Telegram</span>
                    <input class="form-control" type="text" value="<%= telegram %>" name="telegram">
                </label>
                <label class="d-block w-100 mb-2">
                    <span class="mb-1">Github</span>
                    <input class="form-control" type="url" value="<%= github %>" name="github">
                </label>
                <label class="d-block w-100 mb-2">
                    <span class="mb-1">YouTube</span>
                    <input class="form-control" type="url" value="<%= youtube %>" name="youtube">
                </label>
                <button class="btn btn-primary w-100">Saqlash</button>
            </form>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <h2>O'qigan joylarim</h2>
            <ul class="list-group mb-3">
                <% education.forEach(edu => { %>
                    <li class="list-group-item d-flex align-items-start justify-content-between">
                        <ul>
                            <li>
                                <u>Yili</u> - <strong><%= edu.education_years %></strong>
                            </li>
                            <li>
                                <u>Yo'nalish</u> - <strong><%= edu.education_field %></strong>
                            </li>
                            <li>
                                <u>O'qish joyi</u> - <strong><%= edu.education_place %></strong>
                            </li>
                            <li>
                                <u>O'qish haqida</u> - <strong><%= edu.education_description %></strong>
                            </li>
                        </ul>
                        <a class="btn btn-danger p-1" href="/admin/remove-edu/<%= edu.education_place %>">O'chirish</a>
                    </li>
                <% }) %>
            </ul>
            <form action="/admin/add-edu" method="post" required minlength="3">
                <div class="row">
                    <div class="col-6">
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">O'qish yillari</span>
                            <input class="form-control" type="text" name="education_years" placeholder="2018 - 2022" required minlength="3">
                        </label>
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">O'qish yo'nalishi</span>
                            <input class="form-control" type="text" name="education_field" placeholder="Information technologies" required minlength="3">
                        </label>
                    </div>
                    <div class="col-6">
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">O'qish joyi</span>
                            <input class="form-control" type="text" name="education_place" placeholder="Harvard University" required minlength="3">
                        </label>
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">O'qish tavsifi</span>
                            <input class="form-control" type="text" name="education_description" placeholder="I have studied here 4 year" required minlength="3">
                        </label>
                    </div>
                </div>
                <button class="btn btn-primary w-100">Qo'shish</button>
            </form>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <h2>Ish tajribam</h2>
            <ul class="list-group mb-3">
                <% experience.forEach(exp => { %>
                    <li class="list-group-item d-flex align-items-start justify-content-between">
                        <ul>
                            <li>
                                <u>Yili</u> - <strong><%= exp.experience_years %></strong>
                            </li>
                            <li>
                                <u>Kim bo'lib ishlagan</u> - <strong><%= exp.experience_field %></strong>
                            </li>
                            <li>
                                <u>Ish joyi</u> - <strong><%= exp.experience_place %></strong>
                            </li>
                            <li>
                                <u>Ish haqida</u> - <strong><%= exp.experience_description %></strong>
                            </li>
                        </ul>
                        <a class="btn btn-danger p-1" href="/admin/remove-exp/<%= exp.experience_place %>">O'chirish</a>
                    </li>
                <% }) %>
            </ul>
            <form action="/admin/add-exp" method="post">
                <div class="row">
                    <div class="col-6">
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">Ishlagan yillarim</span>
                            <input class="form-control" type="text" name="experience_years" placeholder="2018 - 2022" required minlength="3">
                        </label>
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">Ish sohasi</span>
                            <input class="form-control" type="text" name="experience_field" placeholder="Front End Developer" required minlength="3">
                        </label>
                    </div>
                    <div class="col-6">
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">Ish joyi</span>
                            <input class="form-control" type="text" name="experience_place" placeholder="Uber" required minlength="3">
                        </label>
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">Ish tavsifi</span>
                            <input class="form-control" type="text" name="experience_description" placeholder="I have studied here 4 year" required minlength="3">
                        </label>
                    </div>
                </div>
                <button class="btn btn-primary w-100">Qo'shish</button>
            </form>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <h2>Ko'nikmalarim</h2>
            <form class="skills-form">
                <div class="row mb-3 skills-row">
                    <% skills = skills.sort((a, b) => {
                        return a.skill_order - b.skill_order
                    })%>
                    <% skills.forEach(skill =>{ %>
                        <div class="col-4 d-flex">
                            <input class="form-control w-25" data-skill-order type="number" value="<%= skill.skill_order %>" required>
                            <input class="form-control w-25" data-skill-degree type="number" value="<%= skill.skill_degree %>" required min="0" max="100">
                            <input class="form-control" data-skill-name type="text" value="<%= skill.skill_name %>" required minlength="2">
                            <a class="btn btn-danger" href="/admin/remove-skill/<%= skill.skill_name %>">O'</a>
                        </div>
                    <% }) %>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="button" class="btn btn-success w-100 add-new-skill">Yangi ko'nikma qo'shish</button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-primary w-100 skills-save">Saqlash</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <h2>Bajargan loyihalarim</h2>
            <% projects.forEach(project => { %>
                <div class="row mb-2 border-bottom pb-2">
                    <div class="col-4 ">
                        <img class="img-fluid" src="<%= project.project_poster %>" alt="">
                    </div>
                    <div class="col-7">
                        <ul>
                            <li>
                               Loyiha nomi: <strong><%= project.project_title %></strong>
                            </li>
                            <li>
                               Loyiha turi: <strong><%= project.project_type %></strong>
                            </li>
                            <li>
                               Loyiha linki: <strong><%= project.project_link %></strong>
                            </li>
                        </ul>
                    </div>
                    <div class="col-1">
                        <a class="btn btn-danger p-1" href="/admin/remove-project/<%= project.project_title %>">O'chirish</a>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="col-12">
            <h2>Yangi loyiha qo'shish</h2>
            <form id="new-project">
                <div class="row">
                    <div class="col-6">
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">Loyiha rasmi</span>
                            <input class="form-control" type="file" name="project_poster" required>
                        </label>
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">Loyiha nomi</span>
                            <input class="form-control" type="text" name="project_name" required minlength="2">
                        </label>
                    </div>
                    <div class="col-6">
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">Loyiha turi</span>
                            <input class="form-control" type="text" name="project_type" required minlength="2">
                        </label>
                        <label class="d-block w-100 mb-2">
                            <span class="mb-1">Loyiha linki</span>
                            <input class="form-control" type="url" name="project_link" required>
                        </label>
                    </div>
                </div>
                <button class="btn btn-primary w-100">Qo'shish</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/scripts.js"></script>
</body>
</html>